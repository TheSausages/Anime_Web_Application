{
    "name": "anime.app.frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint Anime_Web_App --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "format": "prettier --write ./ --ignore-path=.prettierignore",
        "test": "vitest run",
        "@comment": "This is needed as otherwise typescript breaks, check every so often if can be deleted",
        "postinstall": "npm install @mui/material @emotion/react @emotion/styled --legacy-peer-deps @mui/icons-material"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@fontsource/roboto": "5.0.8",
        "@material-ui/types": "5.1.0",
        "@mui/icons-material": "^5.14.15",
        "@mui/material": "^5.14.15",
        "@reduxjs/toolkit": "1.9.7",
        "normalize.css": "^8.0.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-redux": "8.1.3"
    },
    "devDependencies": {
        "@testing-library/dom": "9.3.3",
        "@testing-library/react": "13.0.0",
        "@testing-library/user-event": "14.5.1",
        "@types/core-js": "2.5.7",
        "@types/react": "17.0.43",
        "@types/react-dom": "18.2.14",
        "@typescript-eslint/eslint-plugin": "6.9.0",
        "@typescript-eslint/parser": "6.9.0",
        "@vitejs/plugin-react": "4.1.0",
        "@vue/test-utils": "2.4.1",
        "eslint": "8.52.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-react-refresh": "0.4.3",
        "happy-dom": "12.9.1",
        "prettier": "3.0.3",
        "prettier-plugin-organize-imports": "3.2.3",
        "typescript": "5.2.2",
        "vite": "4.5.0",
        "vite-tsconfig-paths": "4.2.1",
        "vitest": "0.34.6"
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    }
}
